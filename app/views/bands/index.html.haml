.container-fuild
  .row
    .col-md-1
    .col-md-10
      .row
        .col-sm-6
          %h3
            Verenigingen
        .col-md-2
          = link_to 'Nieuwe vereniging', new_band_path, class: 'btn btn-secondary float-right'
      %hr
      - @bands.each do |band|
        .row.mb-1
          .col-sm-6.my-auto
            = band.name
          .col-sm-2
            .btn-group.float-right
              = link_to 'Bewerken', edit_band_path(band), class: 'btn btn-outline-secondary'
              = link_to 'Verwijderen',band_path(band),  method: :delete, data: { confirm: 'Weet u het zeker?' }, class: 'btn btn-danger'
