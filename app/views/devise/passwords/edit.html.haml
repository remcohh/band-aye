.container-fluid
  .row
    .col-md-1
    .col-md-8
      = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .row
          .col-sm-10
            %h3
              Stel uw wachtwoord in
        .row
          .col-sm-8
            - if @minimum_password_length
              %em
                (minimaal #{@minimum_password_length} cijfers of letters)
            %br/
            = f.password_field :password, autofocus: true, autocomplete: 'new-password', label: 'Wachtwoord'
            = f.password_field :password_confirmation, autocomplete: 'off', label: 'Bevestig wachtwoord'

          .col-sm-2
        .row
          .col-lg-10
            = f.submit 'Opslaan'
    .col-md-1

